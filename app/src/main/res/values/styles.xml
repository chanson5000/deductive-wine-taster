<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Text">

    </style>

    <style name="AppTheme.Text.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/xxx_large_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Text.Descriptor" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/standard_half_margin</item>
        <item name="android:padding">@dimen/standard_half_margin</item>
    </style>

    <style name="AppTheme.RadioGroup" parent="TextAppearance.AppCompat.Medium">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/medium_text</item>
    </style>

    <style name="AppTheme.RadioGroup.RadioButton">
        <item name="android:padding">4dp</item>
        <item name="android:layout_marginStart">@dimen/standard_half_margin</item>
        <item name="android:layout_marginEnd">@dimen/standard_half_margin</item>
    </style>

    <style name="AppTheme.Button" parent="TextAppearance.AppCompat.Button">

    </style>

</resources>
