<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/SelectionGroupContainer">

    <TextView
        style="@style/AppTheme.Text.Descriptor"
        android:text="@string/color" />

    <RadioGroup
        style="@style/AppTheme.SelectionGroup"
        android:id="@+id/radio_group_color_redwine">

        <RadioButton
            android:id="@+id/radio_color_purple"
            style="@style/AppTheme.SelectionGroup.RadioButton"
            android:text="@string/purple" />

        <RadioButton
            android:id="@+id/radio_color_ruby"
            style="@style/AppTheme.SelectionGroup.RadioButton"
            android:text="@string/ruby" />

        <RadioButton
            android:id="@+id/radio_color_garnet"
            style="@style/AppTheme.SelectionGroup.RadioButton"
            android:text="@string/garnet" />
    </RadioGroup>
</LinearLayout>