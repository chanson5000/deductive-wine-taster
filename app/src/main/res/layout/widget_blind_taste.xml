<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/widget_bg"
    android:gravity="center"
    android:padding="@dimen/standard_margin">

    <TextView
        android:id="@+id/staticText_blind_taste"
        style="@style/AppTheme.Text.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/blind_taste" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/staticText_blind_taste"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_red_wine"
            style="@style/AppTheme.Button"
            android:layout_width="@dimen/main_activity_wine_button_width"
            android:layout_height="wrap_content"
            android:text="@string/button_red_wine" />

        <Button
            style="@style/AppTheme.Button"
            android:id="@+id/button_white_wine"
        android:text="@string/button_white_wine"
        android:layout_width="@dimen/main_activity_wine_button_width"
        android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>