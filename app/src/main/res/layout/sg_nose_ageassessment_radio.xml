<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/SelectionGroupContainer">

    <TextView
        style="@style/AppTheme.Text.Descriptor"
        android:text="@string/age_assessment" />

    <RadioGroup
        android:id="@+id/radio_group_nose_age_assessment"
        style="@style/AppTheme.SelectionGroup">

        <RadioButton
            android:id="@+id/radio_age_assessment_youthful"
            style="@style/AppTheme.SelectionGroup.RadioButton"
            android:text="@string/youthful" />

        <RadioButton
            android:id="@+id/radio_age_assessment_developing"
            style="@style/AppTheme.SelectionGroup.RadioButton"
            android:text="@string/developing" />

        <RadioButton
            android:id="@+id/radio_age_assessment_vinous"
            style="@style/AppTheme.SelectionGroup.RadioButton"
            android:text="@string/vinous" />
    </RadioGroup>
</LinearLayout>