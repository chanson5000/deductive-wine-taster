<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/SelectionGroupContainer">

    <TextView
        style="@style/AppTheme.Text.Descriptor"
        android:text="@string/tearing" />

    <RadioGroup
        android:id="@+id/radio_group_tearing"
        style="@style/AppTheme.SelectionGroup">

        <RadioButton
            android:id="@+id/radio_tearing_light"
            style="@style/AppTheme.SelectionGroup.RadioButton"
            android:text="@string/light" />

        <RadioButton
            android:id="@+id/radio_tearing_medium"
            style="@style/AppTheme.SelectionGroup.RadioButton"
            android:text="@string/medium" />

        <RadioButton
            android:id="@+id/radio_tearing_heavy"
            style="@style/AppTheme.SelectionGroup.RadioButton"
            android:text="@string/heavy" />

    </RadioGroup>
</LinearLayout>