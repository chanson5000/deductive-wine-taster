<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/SelectionGroupContainer">

    <TextView
        style="@style/AppTheme.Text.Descriptor"
        android:text="@string/texture" />

    <RadioGroup
        android:id="@+id/radio_group_palate_texture"
        style="@style/AppTheme.SelectionGroup">

        <RadioButton
            android:id="@+id/radio_palate_texture_creamy"
            style="@style/AppTheme.SelectionGroup.RadioButton"
            android:text="@string/creamy" />

        <RadioButton
            android:id="@+id/radio_palate_texture_round"
            style="@style/AppTheme.SelectionGroup.RadioButton"
            android:text="@string/round" />

        <RadioButton
            android:id="@+id/radio_palate_texture_lean"
            style="@style/AppTheme.SelectionGroup.RadioButton"
            android:text="@string/lean" />
    </RadioGroup>
</LinearLayout>