<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/SelectionGroupContainer">

    <TextView
        style="@style/AppTheme.Text.Descriptor"
        android:text="@string/balanced" />

    <RadioGroup
        android:id="@+id/radio_group_palate_balance"
        style="@style/AppTheme.SelectionGroup">

        <RadioButton
            android:id="@+id/radio_palate_balanced_yes"
            style="@style/AppTheme.SelectionGroup.RadioButton"
            android:text="@string/yes" />

        <RadioButton
            android:id="@+id/radio_palate_balanced_no"
            style="@style/AppTheme.SelectionGroup.RadioButton"
            android:text="@string/no" />
    </RadioGroup>
</LinearLayout>