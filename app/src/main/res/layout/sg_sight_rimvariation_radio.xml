<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/SelectionGroupContainer">

    <TextView
        style="@style/AppTheme.Text.Descriptor"
        android:text="@string/rim_variation" />

    <RadioGroup
        style="@style/AppTheme.SelectionGroup"
        android:id="@+id/radio_group_rimvariation">

        <RadioButton
            android:id="@+id/radio_rim_variation_yes"
            style="@style/AppTheme.SelectionGroup.RadioButton"
            android:text="@string/yes" />

        <RadioButton
            android:id="@+id/radio_rim_variation_no"
            style="@style/AppTheme.SelectionGroup.RadioButton"
            android:text="@string/no" />

    </RadioGroup>
</LinearLayout>