<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/SelectionGroupContainer">

    <TextView
        style="@style/AppTheme.Text.Descriptor"
        android:text="@string/clarity" />

    <RadioGroup
        android:id="@+id/radio_group_clarity"
        style="@style/AppTheme.SelectionGroup">

        <RadioButton
            android:id="@+id/radio_clarity_clear"
            style="@style/AppTheme.SelectionGroup.RadioButton"
            android:text="@string/clear" />

        <RadioButton
            android:id="@+id/radio_clarity_hazy"
            style="@style/AppTheme.SelectionGroup.RadioButton"
            android:text="@string/hazy" />

        <RadioButton
            android:id="@+id/radio_clarity_turbid"
            style="@style/AppTheme.SelectionGroup.RadioButton"
            android:text="@string/turbid" />
    </RadioGroup>
</LinearLayout>