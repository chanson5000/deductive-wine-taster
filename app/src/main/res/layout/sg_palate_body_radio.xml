<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/SelectionGroupContainer">

    <TextView
        style="@style/AppTheme.Text.Descriptor"
        android:text="@string/body" />

    <RadioGroup
        android:id="@+id/radio_group_palate_body"
        style="@style/AppTheme.SelectionGroup">

        <RadioButton
            android:id="@+id/radio_palate_body_light"
            style="@style/AppTheme.SelectionGroup.RadioButton"
            android:text="@string/light" />

        <RadioButton
            android:id="@+id/radio_palate_body_medium"
            style="@style/AppTheme.SelectionGroup.RadioButton"
            android:text="@string/medium" />

        <RadioButton
            android:id="@+id/radio_palate_body_full"
            style="@style/AppTheme.SelectionGroup.RadioButton"
            android:text="@string/full" />
    </RadioGroup>
</LinearLayout>