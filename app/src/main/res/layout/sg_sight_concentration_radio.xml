<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/SelectionGroupContainer">

    <TextView
        style="@style/AppTheme.Text.Descriptor"
        android:text="@string/concentration" />

    <RadioGroup
        android:id="@+id/radio_group_concentration"
        style="@style/AppTheme.SelectionGroup">

        <RadioButton
            android:id="@+id/radio_concentration_pale"
            style="@style/AppTheme.SelectionGroup.RadioButton"
            android:text="@string/pale" />

        <RadioButton
            android:id="@+id/radio_concentration_medium"
            style="@style/AppTheme.SelectionGroup.RadioButton"
            android:text="@string/medium" />

        <RadioButton
            android:id="@+id/radio_concentration_deep"
            style="@style/AppTheme.SelectionGroup.RadioButton"
            android:text="@string/deep" />
    </RadioGroup>
</LinearLayout>