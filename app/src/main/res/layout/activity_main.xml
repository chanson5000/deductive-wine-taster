<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <TextView
        style="@style/AppTheme.Text.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_title_margin"
        android:text="@string/blind_taste"
        app:layout_constraintBottom_toTopOf="@+id/guideline_top_middle"
        app:layout_constraintEnd_toStartOf="@+id/guideline_margin_end"
        app:layout_constraintStart_toStartOf="@+id/guideline_margin_start"
        app:layout_constraintTop_toTopOf="@+id/guideline_margin_top" />

    <Button
        android:id="@+id/button_red_wine"
        style="@style/AppTheme.Button"
        android:layout_width="@dimen/main_activity_wine_button_width"
        android:layout_height="wrap_content"
        android:text="@string/button_red_wine"
        android:onClick="buttonRedWine"
        app:layout_constraintBottom_toTopOf="@+id/guideline_horizontal_center"
        app:layout_constraintEnd_toStartOf="@+id/button_white_wine"
        app:layout_constraintStart_toStartOf="@+id/guideline_margin_start"
        app:layout_constraintTop_toBottomOf="@+id/guideline_top_middle" />

    <Button
        android:id="@+id/button_white_wine"
        style="@style/AppTheme.Button"
        android:layout_width="@dimen/main_activity_wine_button_width"
        android:layout_height="wrap_content"
        android:text="@string/button_white_wine"
        android:onClick="buttonWhiteWine"
        app:layout_constraintBottom_toTopOf="@+id/guideline_horizontal_center"
        app:layout_constraintEnd_toStartOf="@+id/guideline_margin_end"
        app:layout_constraintStart_toEndOf="@id/button_red_wine"
        app:layout_constraintTop_toTopOf="@+id/guideline_top_middle" />

    <Button
        android:id="@+id/button_statistics"
        style="@style/AppTheme.Button"
        android:layout_width="@dimen/main_activity_wine_button_width"
        android:layout_height="wrap_content"
        android:text="@string/button_statistics"
        app:layout_constraintBottom_toTopOf="@+id/guideline_margin_bottom"
        app:layout_constraintEnd_toStartOf="@+id/guideline_margin_end"
        app:layout_constraintStart_toStartOf="@+id/guideline_margin_start"
        app:layout_constraintTop_toTopOf="@+id/guideline_bottom_middle" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_margin_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".10" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_top_middle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".25" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_horizontal_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".50" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_margin_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".90" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_margin_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".10" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_bottom_middle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".75" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_margin_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".90" />

</android.support.constraint.ConstraintLayout>
