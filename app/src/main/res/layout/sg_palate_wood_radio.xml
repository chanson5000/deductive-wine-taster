<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/SelectionGroupContainer">

    <LinearLayout style="@style/AppTheme.SelectionGroup">

        <Switch
            android:id="@+id/switch_palate_wood"
            style="@style/AppTheme.SelectionGroup.Switch"
            android:text="@string/oak" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/AppTheme.Text.Descriptor"
                android:text="@string/usage" />

            <RadioGroup
                android:id="@+id/radio_group_wood_old_vs_new"
                style="@style/AppTheme.SelectionGroup">

                <RadioButton
                    android:id="@+id/radio_palate_wood_old"
                    style="@style/AppTheme.SelectionGroup.RadioButton"
                    android:text="@string/old" />

                <RadioButton
                    android:id="@+id/radio_palate_wood_new"
                    style="@style/AppTheme.SelectionGroup.RadioButton"
                    android:text="@string/word_new" />
            </RadioGroup>

            <TextView
                style="@style/AppTheme.Text.Descriptor"
                android:text="@string/size" />

            <RadioGroup
                android:id="@+id/radio_group_wood_large_vs_small"
                style="@style/AppTheme.SelectionGroup">

                <RadioButton
                    android:id="@+id/radio_palate_wood_large"
                    style="@style/AppTheme.SelectionGroup.RadioButton"
                    android:text="@string/large" />

                <RadioButton
                    android:id="@+id/radio_palate_wood_small"
                    style="@style/AppTheme.SelectionGroup.RadioButton"
                    android:text="@string/small" />
            </RadioGroup>

            <TextView
                style="@style/AppTheme.Text.Descriptor"
                android:text="@string/type" />

            <RadioGroup
                android:id="@+id/radio_group_wood_french_vs_american"
                style="@style/AppTheme.SelectionGroup">

                <RadioButton
                    android:id="@+id/radio_palate_wood_french"
                    style="@style/AppTheme.SelectionGroup.RadioButton"
                    android:text="@string/french" />

                <RadioButton
                    android:id="@+id/radio_palate_wood_american"
                    style="@style/AppTheme.SelectionGroup.RadioButton"
                    android:text="@string/american" />
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>